@model DepartamentoViewModel
@{
    ViewData["Title"] = "EditDepartamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @if (Model.depto_Id == 0)
    {
        //Redirige a la vista para crear 
        <div class="col-md-12">
            <partial name="Departamento" model="@Model">
        </div>
    }
    else
    {
        //Redirige a la vista para editar 
        <div class="col-md-12">
            <partial name="Departamento" model="@Model">
                <div class="card mt-3">
                    <partial name="Municipio" model="@Model">
                </div>
        </div>
    }
</div>
@section Scripts{

<script src="~/js/pages/municipio.js"></script>
<script>
    Municipio.datatablePartials({
        //console.log('hola'+@Model.depto_Id);
        listUrl: "@Url.Action($"ListMunicipios")",
        id: @Model.depto_Id
    });
</script>
<script>
    Catalogs.configure({
        displayName: "municipio",
        getUrl: "@Url.Action("FindMunicipio")"
    });
</script>
<script>
    function valideKey(evt) {
        var code = (evt.which) ? evt.which : evt.keyCode;

        if (code == 8) {
            return true;
        } else if (code >= 48 && code <= 57) {
            return true;
        } else {
            return false;
        }
    }
</script>
}
